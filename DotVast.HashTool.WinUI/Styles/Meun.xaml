<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CollapsedAppBarButtonStyle" BasedOn="{StaticResource DefaultAppBarButtonStyle}" TargetType="AppBarButton">
        <Setter Property="Width" Value="40" />
    </Style>
    <Style x:Key="CollapsedAppBarToggleButtonStyle" BasedOn="{StaticResource DefaultAppBarToggleButtonStyle}" TargetType="AppBarToggleButton">
        <Setter Property="Width" Value="40" />
    </Style>

</ResourceDictionary>
