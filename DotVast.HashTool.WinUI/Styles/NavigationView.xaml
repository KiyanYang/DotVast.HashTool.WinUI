<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 缓解暗色模式下, 点击 PaneToggleButton 时, Panel 背景闪烁的问题. 首次点击时仍然存在闪烁问题. -->
    <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Opacity="0">Transparent</SolidColorBrush>

    <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
    <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
    <Thickness x:Key="NavigationViewMinimalHeaderMargin">-80,0,0,0</Thickness>
    <Thickness x:Key="NavigationViewHeaderMargin">0,0,0,0</Thickness>
    <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>

    <Thickness x:Key="NavigationViewHeaderLargePadding">48,32,48,0</Thickness>
    <Thickness x:Key="NavigationViewHeaderMediumPadding">36,32,36,0</Thickness>
    <Thickness x:Key="NavigationViewHeaderSmallPadding">24,20,24,0</Thickness>
    <Thickness x:Key="NavigationViewBodyLargePadding">48,0</Thickness>
    <Thickness x:Key="NavigationViewBodyMediumPadding">36,0</Thickness>
    <Thickness x:Key="NavigationViewBodySmallPadding">24,0</Thickness>

    <Style x:Key="NavigationViewBodyContentStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,24,0,36" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

</ResourceDictionary>
